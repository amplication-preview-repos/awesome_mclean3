datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  bot         Bot?             @relation(fields: [botId], references: [id])
  botId       String?
  createdAt   DateTime         @default(now())
  id          String           @id @default(cuid())
  orderNumber String?
  product     Product?         @relation(fields: [productId], references: [id])
  productId   String?
  quantity    Int?
  status      EnumOrderStatus?
  totalPrice  Float?
  updatedAt   DateTime         @updatedAt
}

model Bot {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  name        String?
  orders      Order[]
  owner       String?
  products    Product[]
  updatedAt   DateTime  @updatedAt
}

model Product {
  bot         Bot?     @relation(fields: [botId], references: [id])
  botId       String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  orders      Order[]
  price       Float?
  stock       Int?
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumOrderStatus {
  Option1
}
